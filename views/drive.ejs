<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Odin File Uploader</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="jumbotron">
      <h1 class="display-4">Odin File Uploader</h1>
      <a class="btn btn-secondary" href="/">back</a>
      <h2><%= title %></h2>
      <!-- <form action="drive/new-file" method="get">
         -->
      <a href="drive/new-file" class="btn btn-primary">Add File</a>
      <!-- </form> -->

      <hr class="my-4" />

      <% if (logged) { %>
      <p>Logged in as <%= loggedUser %></p>
      <% } else { %>
      <p>You are not logged in.</p>
      <% } %>
    </div>
    <div class="container">
      <h3>Files</h3>
    </div>
    <div class="container">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">File Name</th>
            <th scope="col">File Path</th>
            <th scope="col">User</th>
            <th scope="col">Created At</th>
          </tr>
        </thead>
        <tbody>
          <% files.forEach(function(file) { %>
          <tr>
            <td><%= file.fileName %></td>
            <td><%= file.filePath %></td>
            <td><%= user %></td>
            <td><%= file.createdAt.toLocaleString() %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
